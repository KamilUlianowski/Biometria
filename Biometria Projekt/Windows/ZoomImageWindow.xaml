<Window x:Class="Biometria_Projekt.Windows.ZoomImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometria_Projekt.Windows"
        mc:Ignorable="d"
        Title="ZoomImageWindow" Height="300" Width="300">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="52.92"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Name="border">
            <Image Name="image" Source="/Biometria Projekt;component/image1.jpg" Opacity="1" RenderTransformOrigin="0.5,0.5"  />
        </Border>

    </Grid>

</Window>
